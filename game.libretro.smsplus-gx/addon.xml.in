<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.smsplus-gx"
		name="Sega - MS/GG (SMS Plus GX)"
		version="1.8.0.7"
		provider-name="Charles MacDonald, gameblabla">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>sms|bin|rom|col|gg|sg</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Sega - MS/GG (SMS Plus GX) 1.8</summary>
		<description lang="en_GB">SMS Plus GX was originally a Sega Master System emulator for the Nintendo GameCube. It was ported to libretro by gameblabla.

Supported files: .sms, .bin, .rom, .col, .gg, .sg</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.smsplus-gx</source>
	</extension>
</addon>
