<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.smsplus-gx"
		name="Sega - MS/GG (SMS Plus GX)"
		version="1.8.0.18"
		provider-name="Charles MacDonald, gameblabla">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>sms|bin|rom|col|gg|sg</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.smsplus-gx</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="en_GB">Sega - MS/GG (SMS Plus GX) 1.8</summary>
		<description lang="da_DK">SMS Plus GX er en port af den originale Sega Master System-emulator til Nintendo GameCube.</description>
		<description lang="en_GB">SMS Plus GX is a port of the original Sega Master System emulator for the Nintendo GameCube.</description>
		<disclaimer lang="da_DK">Udviklet til libretro af gameblabla</disclaimer>
		<disclaimer lang="en_GB">Ported to libretro by gameblabla</disclaimer>
	</extension>
</addon>
